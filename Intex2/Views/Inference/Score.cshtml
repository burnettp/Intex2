@{
    ViewData["Title"] = "Prediction Calculator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CrashPredictionModel

@*Create a style for a vertical line*@
<style>
    .vertical-line {
        display: inline-block;
        border-left: 2px solid;
        margin: 0 10px;
        height: 900px;
    }
</style>

